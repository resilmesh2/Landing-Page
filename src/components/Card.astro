---
import { Icon } from 'astro-icon/components'

const { title, description, link, icon } = Astro.props;

---

<a href={link || '/'} class="max-w-sm min-h-52 rounded-xl overflow-hidden shadow-md bg-resilmesh-blue hover:bg-resilmesh-blue/70 transition-colors ease-in-out cursor-pointer font-nunito">
  <div class="px-8 py-8 flex flex-col items-start justify-start text-start">
    <div class="flex flex-row justify-start items-center w-full mb-4">
      <div class="text-2xl font-bold text-resilmesh-light-blue">{title}</div>
      {icon && <Icon name={icon} class="text-4xl text-resilmesh-magenta ml-auto" />}
    </div>
    <p class="text-xl text-resilmesh-white">
      {description}
    </p>
  </div>
</a>
